<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('./head') -%>
    <script src="/globalPage.js"></script>
    <script src="/bmiPage.js"></script>
</head>
<body class="container">
    <label>BMI page</label>
    <form >
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" aria-describedby="emailHelp">
        </div>
        <div class="form-group">
            <label for="weight">Weight</label>
            <input type="text" class="form-control" id="weight" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="height">Height</label>
            <input type="text" class="form-control" id="height" aria-describedby="emailHelp">
          </div>
          <div class="form-group">
            <label for="bmi-value">BMI value</label>
            <input type="text" class="form-control" id="bmi-value" aria-describedby="emailHelp">
          </div>
        <button type="submit" class="btn btn-primary" id="btn-submit">Submit</button>
      </form>
</body>
</html>